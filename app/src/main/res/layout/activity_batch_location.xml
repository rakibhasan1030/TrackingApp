<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".batchLocation.BatchLocationActivity">


    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="25sp"
        android:text="Location Results"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <Button
        android:id="@+id/location_request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Batch Location"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <Button
        android:id="@+id/start_location_update_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Location Update Service"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <Button
        android:id="@+id/stop_location_update_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Location Update Service"/>


</LinearLayout>